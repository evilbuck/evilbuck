---
import { resumeData } from '../data/resume';
const { Content } = await import('../pages/resume.md');
---

<main class="resume-container">
  <header class="header-section">
    <img
      src={resumeData.profileImage}
      alt={resumeData.name}
      class="profile-image"
    />
    <div>
      <h1 class="profile-name">{resumeData.name}</h1>
      <p class="profile-tagline">Staff Full-Stack Engineer / Technical Leader</p>
      <ul class="profile-links">
        <li><a href={resumeData.links.github} target="_blank" rel="noopener noreferrer">GitHub</a></li>
        <li><a href={resumeData.links.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
        <li><a href={`mailto:${resumeData.email}`}>{resumeData.email}</a></li>
      </ul>
    </div>
  </header>
  <article class="resume-content">
    <Content />
  </article>
</main>

<style>
  .resume-container {
    max-width: 820px;
    margin: 0 auto;
    padding: 2rem 1.5rem 6rem;
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
    min-height: 100vh;
    background: linear-gradient(180deg, hsl(var(--background)) 0%, hsl(var(--surface)) 100%);
  }

  .header-section {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
    background: hsl(var(--surface));
    padding: 3rem;
    border-radius: 28px;
    box-shadow: 0 20px 45px rgba(36, 24, 18, 0.08);
  }

  .profile-image {
    width: 8rem;
    height: 8rem;
    border-radius: 22px;
    object-fit: cover;
    border: 3px solid hsla(var(--accent), 0.25);
    box-shadow: 0 12px 30px rgba(36, 24, 18, 0.12);
  }

  .profile-name {
    font-size: 2.75rem;
    font-family: var(--font-sans);
    font-weight: 700;
    letter-spacing: -0.015em;
    color: hsl(var(--foreground));
    margin-bottom: 0.75rem;
  }

  .profile-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
    list-style: none;
    font-size: 1rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .profile-links li {
    margin: 0;
  }

  .profile-tagline {
    font-family: var(--font-serif);
    color: hsl(var(--subtle));
    font-size: 1.05rem;
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }

  .profile-links a {
    color: hsl(var(--subtle));
    transition: var(--transition-smooth);
  }

  .profile-links a:hover {
    color: hsl(var(--accent));
  }

  .resume-content {
    background: hsl(var(--surface));
    border-radius: 28px;
    padding: 3rem;
    box-shadow: 0 18px 40px rgba(36, 24, 18, 0.08);
  }

  .resume-content :global(hr) {
    border: none;
    border-top: 1px solid hsla(var(--border), 0.8);
    margin: 2.5rem 0;
  }

  .resume-content :global(h1) {
    font-size: 2.25rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    margin-top: 2.75rem;
    margin-bottom: 1rem;
    line-height: 1.25;
  }

  .resume-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    line-height: 1.3;
  }

  .resume-content :global(h3) {
    font-size: 1.3rem;
    font-weight: 500;
    color: hsl(var(--subtle));
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    text-transform: none;
  }

  .resume-content :global(p) {
    margin-bottom: 1.15rem;
    line-height: 1.85;
    color: hsla(var(--foreground), 0.88);
  }

  .resume-content :global(ul) {
    padding-left: 1.35rem;
    margin-bottom: 1.15rem;
    display: grid;
    gap: 0.75rem;
  }

  .resume-content :global(li) {
    line-height: 1.7;
    color: hsla(var(--foreground), 0.9);
  }

  .resume-content :global(a) {
    color: hsl(var(--accent));
    text-decoration-color: hsla(var(--accent), 0.4);
    text-decoration-thickness: 0.1em;
    text-underline-offset: 0.2em;
  }

  .resume-content :global(a:hover) {
    text-decoration-color: hsl(var(--accent));
  }

  .resume-content :global(strong) {
    color: hsl(var(--foreground));
    font-weight: 600;
  }

  .resume-content :global(em) {
    color: hsla(var(--subtle), 0.8);
    font-style: italic;
  }

  @media (max-width: 768px) {
    .header-section,
    .resume-content {
      padding: 2.25rem;
      border-radius: 20px;
    }

    .header-section {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .profile-links {
      justify-content: center;
    }
  }
</style>
