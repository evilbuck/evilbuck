---
import { resumeData } from '../data/resume';
const { Content } = await import('../pages/resume.md');
---

<main class="container mx-auto px-4 py-12 max-w-4xl">
  <header class="mb-16 flex items-center gap-8">
    <img
      src={resumeData.profileImage}
      alt={resumeData.name}
      class="w-32 h-32 rounded-full object-cover border-4 border-white shadow-lg"
    />
    <div>
      <h1 class="text-5xl font-bold text-gray-900 mb-4">{resumeData.name}</h1>
      <div class="flex flex-wrap gap-6 text-lg text-gray-600">
        <a href={resumeData.links.github} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 transition-colors">GitHub</a>
        <a href={resumeData.links.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 transition-colors">LinkedIn</a>
      </div>
    </div>
  </header>
<article class="resume-content">
  <Content />
</article>
</main>

<style>
  .resume-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .resume-content :global(hr) {
    border: none;
    border-top: 1px solid #ddd;
    margin: 2rem 0;
  }

  .resume-content :global(h3) {
    color: #333;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .resume-content :global(ul) {
    padding-left: 1.5rem;
  }

  .resume-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .resume-content :global(a) {
    color: #0066cc;
    text-decoration: none;
  }

  .resume-content :global(a:hover) {
    text-decoration: underline;
  }

  .resume-content :global(strong) {
    color: #222;
  }
</style>
