---
import { resumeData } from '../data/resume';
---

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <main class="resume-shell">
    <header class="resume-header">
      <img
        src={resumeData.profileImage}
        alt={resumeData.name}
        class="resume-avatar"
      />
      <div class="resume-intro">
        <h1 class="resume-name">{resumeData.name}</h1>
        <p class="resume-tagline">Senior Full-Stack Engineer & Product-focused Builder</p>
        <ul class="resume-contact">
          <li><a href={`mailto:${resumeData.email}`}>{resumeData.email}</a></li>
          <li><a href={resumeData.links.github} target="_blank" rel="noopener noreferrer">GitHub</a></li>
          <li><a href={resumeData.links.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
        </ul>
      </div>
    </header>

    <section class="resume-section">
      <h2>Profile</h2>
      <div class="resume-body">
        {resumeData.summary.map(paragraph => (
          <p>{paragraph}</p>
        ))}
      </div>
    </section>

    <section class="resume-section">
      <h2>Work Experience</h2>
      <div class="experience-list">
        {resumeData.experience.map(job => (
          <article class="experience-card">
            <header>
              <h3>{job.title}</h3>
              <p>{job.company} Â· {job.period}</p>
              <span>{job.location}</span>
            </header>
            <ul>
              {job.achievements.map(achievement => (
                <li>{achievement}</li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </section>
  </main>
</div>

<style>
  .resume-shell {
    max-width: 820px;
    margin: 0 auto;
    padding: 5rem 1.5rem 6rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    gap: 4rem;
    background: linear-gradient(180deg, hsl(var(--background)) 0%, hsl(var(--surface)) 100%);
  }

  .resume-header {
    background: hsl(var(--surface));
    border-radius: 28px;
    padding: 3rem;
    display: flex;
    gap: 2rem;
    align-items: center;
    box-shadow: 0 20px 45px rgba(36, 24, 18, 0.08);
  }

  .resume-avatar {
    width: 7.5rem;
    height: 7.5rem;
    border-radius: 22px;
    object-fit: cover;
    border: 3px solid hsla(var(--accent), 0.25);
    box-shadow: 0 12px 30px rgba(36, 24, 18, 0.12);
  }

  .resume-intro {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .resume-name {
    font-size: 2.75rem;
    font-family: var(--font-sans);
    font-weight: 700;
    letter-spacing: -0.015em;
  }

  .resume-tagline {
    font-family: var(--font-serif);
    color: hsl(var(--subtle));
    font-size: 1.1rem;
    line-height: 1.5;
  }

  .resume-contact {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem;
    font-family: var(--font-sans);
    font-size: 0.95rem;
    letter-spacing: 0.02em;
  }

  .resume-contact li a {
    color: hsl(var(--subtle));
  }

  .resume-section {
    background: hsl(var(--surface));
    border-radius: 28px;
    padding: 3rem;
    box-shadow: 0 18px 40px rgba(36, 24, 18, 0.08);
  }

  .resume-section h2 {
    font-size: 1.75rem;
    margin-bottom: 1.75rem;
  }

  .resume-body {
    display: grid;
    gap: 1.25rem;
    font-size: 1.05rem;
    line-height: 1.85;
    color: hsla(var(--foreground), 0.85);
  }

  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 2.75rem;
  }

  .experience-card {
    padding-bottom: 2.5rem;
    border-bottom: 1px solid hsla(var(--border), 0.9);
  }

  .experience-card:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .experience-card header {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    margin-bottom: 1.35rem;
  }

  .experience-card h3 {
    font-size: 1.35rem;
    font-family: var(--font-sans);
    font-weight: 600;
  }

  .experience-card p {
    font-family: var(--font-sans);
    color: hsl(var(--subtle));
    font-size: 0.95rem;
    letter-spacing: 0.03em;
    text-transform: uppercase;
  }

  .experience-card span {
    font-size: 0.95rem;
    color: hsla(var(--subtle), 0.8);
  }

  .experience-card ul {
    display: grid;
    gap: 0.8rem;
    padding-left: 1.2rem;
    color: hsla(var(--foreground), 0.88);
    line-height: 1.7;
  }

  .experience-card li::marker {
    color: hsl(var(--accent));
  }

  @media (max-width: 768px) {
    .resume-shell {
      padding: 3rem 1rem 4rem;
      gap: 3rem;
    }

    .resume-header,
    .resume-section {
      padding: 2.25rem;
      border-radius: 20px;
    }

    .resume-header {
      flex-direction: column;
      text-align: center;
    }

    .resume-contact {
      justify-content: center;
    }
  }
</style>
