---
import { resumeData } from '../data/resume';
---

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <header class="mb-16 flex items-center gap-8">
      <img 
        src={resumeData.profileImage} 
        alt={resumeData.name}
        class="w-32 h-32 rounded-full object-cover border-4 border-white shadow-lg"
      />
      <div>
        <h1 class="text-5xl font-bold text-gray-900 mb-4">{resumeData.name}</h1>
        <div class="flex flex-wrap gap-6 text-lg text-gray-600">
          <a href={resumeData.links.github} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 transition-colors">GitHub</a>
          <a href={resumeData.links.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 transition-colors">LinkedIn</a>
        </div>
      </div>
    </header>

    <section class="mb-16 prose prose-lg max-w-none">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Summary</h2>
      {resumeData.summary.map(paragraph => (
        <p class="text-gray-700 leading-relaxed">{paragraph}</p>
      ))}
    </section>

    <section class="space-y-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Work Experience</h2>
      {resumeData.experience.map(job => (
        <div class="experience-item">
          <div class="mb-4">
            <h3 class="text-2xl font-bold text-gray-900">{job.title}</h3>
            <p class="text-lg text-gray-600">{job.company} · {job.period} · {job.location}</p>
          </div>
          <ul class="list-disc pl-5 space-y-2 text-gray-700">
            {job.achievements.map(achievement => (
              <li>{achievement}</li>
            ))}
          </ul>
        </div>
      ))}
    </section>
  </main>
</div>